<div class="header">
    <div class="top-header">
        <div class="top-header-element">
            <img src="/images/companyLogo.jpg" alt="multibrand" class="company-logo">
        </div>
        <div class="top-header-element top-header-right">
            <div class="user-logged">
                <% if (locals.userLogged) { %>
                    <i class="fa-solid fa-user user-logged-icon"></i>
                    <div class="user-logged-name">
                        <%= userLogged.first_name + ' ' + userLogged.last_name %>
                        <a href="/logout"><i class="fa-solid fa-arrow-right-from-bracket logout-icon"></i></a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <div class="bottom-header <%= locals.bottomHeaderMenu ? 'bottom-header-border' : '' %>">
        
        <% if (locals.bottomHeaderMenu) { %>

            <% bottomHeaderMenu.forEach(itemMenu => { %>
                
                <div class="<%= locals.selectedItem == itemMenu.name ? 'bottom-header-item bhi-selected' : 'bottom-header-item' %>">
                    <a href="<%= itemMenu.href %>"><%= itemMenu.name %></a>                

                    <% if (itemMenu.subitems.length > 0) { %>
                        <div class="bottom-header-subitems" id="<%= 'subItems_' + itemMenu.id %>">
                            <% itemMenu.subitems.forEach(subitem => { %>
                                <a href="<%= subitem.href %>" class="<%= locals.selectedSubitem == subitem.name ? 'bottom-header-subitem bhs-selected' : 'bottom-header-subitem' %>"><%= subitem.name %></a>                                
                            <% }) %>
                        </div>
                        <div class="bottom-header-show-subitems"><i class="fa-solid fa-chevron-down"></i></div>
                    <% } %>
                </div>
            <% }) %>

            <% if (locals.branch) { %>
                <div class="bottom-header-right-element">
                    <span class="branch-name"><%= branch.branch.toUpperCase() %></span>
                    <% 
                        const branchLower = branch.branch.toLowerCase();
                        let flagImage = '';
                        if (branchLower.includes('argentina')) {
                            flagImage = '/images/argentina.jpg';
                        } else if (branchLower.includes('chile')) {
                            flagImage = '/images/chile.jpg';
                        }
                    %>
                    <% if (flagImage) { %>
                        <img src="<%= flagImage %>" alt="<%= branch.branch %>" class="branch-flag">
                    <% } %>
                    <a href="/menu" class="branch-edit-icon">
                        <i class="fa-solid fa-pencil"></i>
                    </a>
                </div>
            <% } %>
            
        <% } %>
    </div>
</div>  





